<odoo>
    <data>
        <record model="ir.ui.view" id="view_pos_pouchdb_pos_config_form">
            <field name="name">pos.pouchdb.pos.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <h2 name="order">PouchDB</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="pouchdb_reference" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="iface_pouchdb"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="iface_pouchdb" string="Use PouchDB"/>
                                <div class="text-muted">
                                    Using PouchDB as Local Storage
                                </div>
                            </div>
                        </div>
                        <div id="couchdb_reference" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="iface_couchdb"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="iface_couchdb" string="Use CouchDB"/>
                                <div class="text-muted">
                                   Using CouchDB for Replication from PouchDB
                                </div>
                                <div class="content-group mt16" attrs="{'invisible': [('iface_couchdb', '=', False)]}">
                                    <field name="couchdb_url"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>